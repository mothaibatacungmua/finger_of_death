{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "label": "makedir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p", "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "args": [
                "-G", 
                "'Unix Makefiles'", 
                "-DCMAKE_PREFIX_PATH=${workspaceFolder}/libtorch", 
                "-DCMAKE_BUILD_TYPE=Debug",
                ".."
            ],
            "dependsOn":["makedir"]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "args": [
                "-j",
                "8"
            ],
            "dependsOn":["cmake"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        }
    ]
}